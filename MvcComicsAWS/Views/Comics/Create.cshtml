@{
    ViewData["Title"] = "Crear Comic";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="nombre">Nombre del cómic</label>
        <input type="text" name="nombre" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="imagen">Imagen (archivo)</label>
        <input type="file" name="imagen" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-success mt-2">Crear</button>
    <a asp-action="Index" class="btn btn-secondary mt-2">Cancelar</a>
</form>
