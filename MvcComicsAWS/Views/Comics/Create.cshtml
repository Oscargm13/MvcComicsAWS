@model Comic
@{
    ViewData["Title"] = "Crear Comic";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="nombre">Nombre</label>
        <input type="text" name="nombre" class="form-control" value="@Model?.Nombre" required />
    </div>
    <div class="form-group">
        <label for="imagen">URL de la imagen</label>
        <input type="text" name="imagen" class="form-control" value="@Model?.Imagen" required />
    </div>
    <button type="submit" class="btn btn-success mt-2">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary mt-2">Cancelar</a>
</form>
